<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".fragments.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:src="@color/statusbarColor"
                android:id="@+id/filmImagePoster"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Film Name"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:id="@+id/filmName"
                android:fontFamily="@font/asap"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Film Year"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:id="@+id/filmYear"
                android:fontFamily="@font/montserrat_thin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Film Type"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:id="@+id/filmType"
                android:fontFamily="@font/montserrat_thin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/imdb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:text="Film Rate"
                    android:textColor="#FDC61F"
                    android:textSize="16sp"
                    android:id="@+id/filmImdbRate"
                    android:fontFamily="@font/montserrat_bold"/>




            </LinearLayout>

            <View
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginHorizontal="20dp"
                android:background="#27FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Director"
                    android:textColor="@color/white"
                    android:textSize="14.5sp"
                    android:fontFamily="@font/montserrat_thin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="14.5sp"
                    android:id="@+id/filmDirector"
                    android:fontFamily="@font/montserrat_thin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Language"
                    android:textColor="@color/white"
                    android:textSize="14.5sp"
                    android:fontFamily="@font/montserrat_thin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Langugae"
                    android:textColor="@color/white"
                    android:textSize="14.5sp"
                    android:id="@+id/filmLanguage"
                    android:fontFamily="@font/montserrat_thin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Country"
                    android:textColor="@color/white"
                    android:textSize="14.5sp"
                    android:fontFamily="@font/montserrat_thin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Country"
                    android:textColor="@color/white"
                    android:textSize="14.5sp"
                    android:id="@+id/filmCountry"
                    android:fontFamily="@font/montserrat_thin"/>

            </LinearLayout>

            <View
                android:layout_marginVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginHorizontal="20dp"
                android:background="#27FFFFFF"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14.5sp"
                android:fontFamily="@font/montserrat_thin"
                android:textColor="@color/white"
                android:id="@+id/filmDescription" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>